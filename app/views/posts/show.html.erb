<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<form class="comment-form" data-post-id="<%= params[:id] %>">
  <label for="">Write a comment</label>
  <input type="text" name="comment" data-behavior="post_comment">
  <input type="button" name="post-comment" value="New comment" id="post_btn">
</form>

<h3>Comments</h3>
<div id="comments">
  <%= render @post.comments %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
